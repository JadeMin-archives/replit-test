hidden = [".config", "package-lock.json"]
language = "javascript"

entrypoint = "./src"

onBoot = "pnpm install"
run = "pnpm run start"



[nix]
	channel = "stable-23_05"


[packager]
	language = "nodejs-pnpm"

	[packager.features]
		packageSearch = true
		guessImports = true
		enabledForHosting = false



[gitHubImport]
	requiredFiles = [".replit", "replit.nix", "package.json", "pnpm-lock.yarn"]