language = "nix"

hidden = [".config", "pnpm-lock.yaml"]
# onBoot = "pnpm install"
run = "pnpm run start"

[gitHubImport]
	requiredFiles = [".replit", "replit.nix", ".config", "package.json", "pnpm-lock.yarn"]



[nix]
	channel = "stable-23_05"


[packager]
	language = "nodejs-pnpm"
	afterInstall = "echo 'All requirements has been installed!'"

	[packager.features]
		packageSearch = true
		guessImports = true
		enabledForHosting = false